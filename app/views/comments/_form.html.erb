<%= form_for ([@article, @article.comments.build]) do |f| %>

    <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@comment.errors.count, "error") %>
            Prohibited this comments from being saved.
          </h2>
          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :Commenter, class: 'label label-primary' %><br>
      <%= f.text_field :commenter, :style => 'width:500px;' %>
    </p>

    <p>
      <%= f.label :Comment, class: 'label label-primary'%><br>
      <%= f.text_area :body, :style => 'width:500px; height:100px;'  %>
    </p>

    <p>
      <%= f.submit 'Create Comment', :class  => 'btn btn-primary'%>
    </p>
<% end %>